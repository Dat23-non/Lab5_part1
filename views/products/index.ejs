<%- include('../partials/header') %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Products</h2>
    <a href="/products/new" class="btn btn-primary">Add Product</a>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Supplier</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (products.length === 0) { %>
        <tr><td colspan="5" class="text-center">No products</td></tr>
      <% } %>
      <% products.forEach(p => { %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.price %></td>
          <td><%= p.quantity %></td>
          <td><%= p.supplierId ? p.supplierId.name : '-' %></td>
          <td>
            <a href="/products/<%= p._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form action="/products/<%= p._id %>/delete" method="post" style="display:inline-block;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
