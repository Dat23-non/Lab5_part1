<%- include('../partials/header') %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Suppliers</h2>
    <a href="/suppliers/new" class="btn btn-primary">Add Supplier</a>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (suppliers.length === 0) { %>
        <tr><td colspan="4" class="text-center">No suppliers</td></tr>
      <% } %>
      <% suppliers.forEach(s => { %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.address || '-' %></td>
          <td><%= s.phone || '-' %></td>
          <td>
            <a href="/suppliers/<%= s._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form action="/suppliers/<%= s._id %>/delete" method="post" style="display:inline-block;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>
